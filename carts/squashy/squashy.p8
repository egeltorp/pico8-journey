pico-8 cartridge // http://www.pico-8.com
version 43
__lua__
-- paddle
padx = 52
pady = 122
padw = 24
padh = 4
padspeed = 4

function movepaddle()
	if btn(0) then
		padx -= padspeed
	elseif btn(1) then
		padx += padspeed
	end
end

function _update()
	movepaddle()
end

function _draw()
	cls()
	
	rectfill(padx, pady, padx+padw, pady+padh, 15)
end
