pico-8 cartridge // http://www.pico-8.com
version 43
__lua__
-- paddle
padx = 52
pady = 122
padw = 24
padh = 4
padspeed = 4

-- ball
ballx = 64
bally = 64
ballsize = 3
ballxdir = 5
ballydir = -3
ballspeed = 0.5

-- general
score = 0
lives = 3

-- text
text_1 = "game over"
x_1 = 64 - (#text_1 * 4) / 2
text_2 = "ctrl+r to play again"
x_2 = 64 - (#text_2 * 4) / 2

function movepaddle()
	if btn(0) then
		padx -= padspeed
	elseif btn(1) then
		padx += padspeed
	end
end

function moveball()
	ballx += ballxdir * ballspeed
	bally += ballydir * ballspeed
end

function bounceball()
 -- left
 if ballx < ballsize then
 	ballxdir =- ballxdir
 	sfx(0)
 end

 -- right
 if ballx > 128-ballsize then
 	ballxdir =- ballxdir
 	sfx(0)
 end

 -- top
 if bally < ballsize then
 	ballydir =- ballydir
 	sfx(0)
 end
end

function bouncepaddle()
	if ballx >= padx and
	ballx <= padx+padw and
	bally >= pady-4 then
		sfx(0)
		score += 10
		ballydir = -ballydir
		ballspeed += 0.05
	end
end

function _update()
	movepaddle()
	bounceball()
	moveball()
	bouncepaddle()
	losedeadball()
end

function losedeadball()
	if bally > 128-ballsize then
		if lives > 0 then
			sfx(01)
			bally = 24
			lives -= 1
			if lives == 0 then
				ballydir = 0
				ballxdir = 0
				bally = 64
				ballx = 64
				sfx(02)
			end
		end
	end
end

function _draw()
	rectfill(0, 0, 128, 128, 3)
	
	-- draw lives
	for i=1, lives do
		spr(001, 90+i*8, 4)
	end
	
	-- draw paddle
	rectfill(padx, pady, padx+padw, pady+padh, 15)
	
	-- draw ball
	circfill(ballx, bally, ballsize, 15)
	
	-- score
	print("score: "..score, 4, 6, 15)
	
	-- game over
	if lives == 0 then
		print(text_1, x_1, 52, 15)
		print(text_2, x_2, 72, 15)
	end
end
